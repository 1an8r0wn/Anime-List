doctype html
html
    head
        title Anime List
        meta(name='viewport',content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(charset='utf-8')
        // social_tags
        include ../Jade/_tags.jade
        +social_tags('Anime List','展示新番的清單','https://gnehs.github.io/Anime-List/og.png','https://gnehs.github.io/Anime-List/') 
        // MDUI
        link(href='//cdnjs.cloudflare.com/ajax/libs/mdui/0.4.2/css/mdui.min.css',rel='stylesheet')
        //evaicon
        link(href='//unpkg.com/eva-icons@1.1.0/style/eva-icons.css',rel='stylesheet')
        link(href='./css/flexboxgrid.css', rel='stylesheet')
        link(href='./css/AnimeList.css?' + Math.floor(Math.random() * (999)), rel='stylesheet')

        meta(name="theme-color" content="#3f51b5")
        link(rel="icon" href="./icon/drawable-ldpi/icon.png")

    body.mdui-drawer-body-left.mdui-theme-primary-indigo.mdui-theme-accent-indigo
        header.mdui-appbar.mdui-appbar-fixed
            .mdui-toolbar.mdui-color-theme
                a.mdui-btn.mdui-btn-icon.mdui-ripple.mdui-ripple-white(mdui-drawer="{target: '#drawer', swipe: true}")
                    i.mdui-icon.material-icons menu
                .mdui-typo-title Anime List
                .mdui-toolbar-spacer
                a.mdui-btn.mdui-btn-icon.mdui-ripple.mdui-ripple-white(href="https://github.com/ACGNTaiwan/Anime-List",target="_blank",mdui-tooltip="{content:'Github'}")
                    i.mdui-icon.eva.eva-github

        #drawer.mdui-drawer.mdui-appbar-with-toolbar
            ul.mdui-list(mdui-collapse="{accordion: true}")

        #content.mdui-container hiii
        //navigo
        script(src='/js/navigo.min.js')
        // MDUI
        script(src='//cdnjs.cloudflare.com/ajax/libs/mdui/0.4.2/js/mdui.min.js')        
        // JQuery https://cdnjs.com/libraries/jquery/ 
        script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js')
        // main
        script(src='./js/index.js?' + Math.floor(Math.random() * (999)))